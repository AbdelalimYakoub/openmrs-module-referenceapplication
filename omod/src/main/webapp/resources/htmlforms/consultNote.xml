    <ifMode mode="VIEW" include="false">
        <h2><uimessage code="referenceapplicaton.clinic.consult.title"/></h2>

        <div id="who-when-where">
            <p id="who">
                <label><uimessage code="Provider.title"/></label>
                <span><encounterProvider default="currentUser" required="true"  /></span>
            </p>
            <p id="when">
                <label><uimessage code="Location.title"/></label>
                <span><encounterLocation default="SessionAttribute:sessionContext.sessionLocationId"/></span>
